<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainAboutAppFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="О приложении"
            android:scaleType="centerInside"
            android:src="@drawable/health_check" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Всё о вашем здоровье"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="И даже больше: отслеживание аспектов вашего здоровья, общение с чат-ботом и советы от экспертов"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp" />
    </LinearLayout>

</FrameLayout>