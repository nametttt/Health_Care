<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutWaterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                style="@style/BackButton"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/HeaderText"
                    android:text="О водном режиме"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SubHeaderText"
                    android:id="@+id/textValue"
                    android:text="Для поддержания здоровья вам необходимо потреблять 1200 мл в день."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/calendar_asset">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="Возраст"
                                style="@style/TableCell"
                                android:textStyle="bold"
                                android:background="@drawable/table_cell_bg_left" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                style="@style/TableCell"
                                android:text="Норма потребления воды"
                                android:textStyle="bold"
                                android:background="@drawable/table_cell_bg_right" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="1 - 3 года"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="1000 мл"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="4 - 8 лет"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="1200 мл"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@color/darkgray"
                                android:padding="10dp"
                                android:background="@drawable/table_rows" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="9 - 13 лет"
                                android:textColor="@color/darkgray"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:padding="10dp"
                                android:background="@drawable/table_rows" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="2100 мл"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="14 - 18 лет"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="2500 мл"
                                style="@style/TableCell"
                                android:background="@drawable/table_rows" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:text="> 18 лет"
                                style="@style/TableCell"
                                android:background="@drawable/table_cell_bg_bottom_left" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="3000 мл"
                                style="@style/TableCell"
                                android:background="@drawable/table_cell_bg_bottom_right" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SubHeaderText"
                    android:text="Поддерживайте оптимальный водный баланс для здоровья и бодрости! Установите свою дневную норму потребления воды и отслеживайте ее, чтобы быть всегда в форме."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>