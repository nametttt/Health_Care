<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainDrinkingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="Вода"
            android:scaleType="centerInside"
            android:src="@drawable/main_water" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Водный режим"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Следите за количеством выпитой воды и соблюдайте дневную норму человека"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>


</FrameLayout>