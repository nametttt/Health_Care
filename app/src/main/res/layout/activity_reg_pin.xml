<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegPinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:textAlignment="textStart"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/left_arrow"
            android:background="@color/transparent"
            android:textColor="@color/gray"
            android:text="Назад"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Подтвердите вашу почту"
                android:textSize="32dp"
                android:layout_marginVertical="10dp"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/aboutemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Для продолжения регистрации подтвердите свою почту, пройдя по ссылке, отправленной на ваш электронный адрес."
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:textAlignment="textStart"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Получить новый код"
                android:textColor="#5047B5"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@color/transparent"/>
            />


        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_asset"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Продолжить"
        android:textAllCaps="false"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="20dp" />


</RelativeLayout>