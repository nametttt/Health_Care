<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegActivityEmail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:id="@+id/back"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/left_arrow"
            android:background="@color/transparent"
            android:textColor="@color/gray"
            android:text="Назад"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Введите адрес электронной почты"
                android:textSize="32dp"
                android:layout_marginVertical="10dp"
                android:textAlignment="textStart"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Для создания нового профиля"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:textAlignment="textStart"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Адрес электронной почты"
                android:textAlignment="textStart"
                android:textColor="@color/darkgray"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:padding="12dp"
                android:id="@+id/email"
                android:textSize="18dp"
                android:maxLines="1"
                android:background="@drawable/edit_text_asset"
                android:hint="example@gmail.com"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
            <CheckBox
                android:layout_width="25dp"
                android:id="@+id/userargee"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/checkbox_view_asset"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Подтверждаю согласие с"
                    android:textSize="20dp"
                    android:textAlignment="textStart"/>
                    

                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:id="@+id/userAgreement"
                    android:text="@string/user_acess"
                    android:textSize="20dp"
                    android:textAlignment="textStart"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/checkbox_view_asset"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Получать письма с данными о здоровье и анонсом событий. Только самое важное"
                        android:textSize="20dp"
                        android:textAlignment="textStart"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/continu"
            android:background="@drawable/button_asset"
            android:padding="12dp"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:text="Продолжить"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:textColor="@color/white"
            android:textSize="20dp" />
</RelativeLayout>