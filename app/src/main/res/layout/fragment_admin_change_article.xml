<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminChangeArticleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textAlignment="textStart"
        android:layout_marginVertical="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/left_arrow"
        android:background="@color/transparent"
        android:textColor="@color/gray"
        android:text="Назад"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Изменение статьи"
        android:id="@+id/nameFragment"
        android:textSize="32dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/textAbout"
        android:text="Измените данные о статье или удалите ее"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        android:textAlignment="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Фотография статьи"
            android:textAlignment="textStart"
            android:textColor="@color/darkgray"
            android:textSize="20dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/image"
                android:foreground="@drawable/article_image_asset"
                android:src="@drawable/notarticle" />

        </androidx.cardview.widget.CardView>



        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="Название"
        android:textAlignment="textStart"
        android:textColor="@color/darkgray"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:padding="12dp"
        android:id="@+id/title"
        android:textSize="18dp"
        android:maxLines="1"
        android:inputType="text"
        android:background="@drawable/edit_text_asset"
        android:hint="Название"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Категория"
            android:textAlignment="textStart"
            android:textColor="@color/darkgray"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/CategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edit_text_asset"
            android:textSize="20dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="5dp"
            android:textAlignment="textStart"
            android:entries="@array/categories"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Доступ"
            android:textAlignment="textStart"
            android:textColor="@color/darkgray"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/AccessSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edit_text_asset"
            android:textSize="20dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="5dp"
            android:textAlignment="textStart"
            android:entries="@array/access"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Содержание"
            android:textAlignment="textStart"
            android:textColor="@color/darkgray"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18dp"
            android:background="@drawable/edit_text_asset"
            android:hint="Введите содержание статьи"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:minLines="5"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_asset"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_asset"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:text="Удалить"
            android:id="@+id/delete"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>