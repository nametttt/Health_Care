<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminChangeUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:textAlignment="textStart"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/left_arrow"
                android:background="@color/transparent"
                android:textColor="@color/gray"
                android:text="Назад"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Пользователи приложения"
                    android:textSize="32dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Редактируйте пользователя"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="textStart"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Фотография профиля"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkgray"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cat" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Псевдоним"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkgray"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:background="@drawable/edit_text_asset"
                        android:hint="Псевдоним"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Пол"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkgray"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gender_asset"
                            android:text="Женский"
                            android:textAlignment="center"
                            android:layout_weight="0.4"
                            android:drawablePadding="7dp"
                            android:textSize="20dp"
                            android:padding="10dp"
                            android:button="@null"

                            android:drawableTop="@drawable/woman"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.05"
                            />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Мужской"
                            android:textAlignment="center"
                            android:padding="10dp"
                            android:layout_weight="0.4"
                            android:drawablePadding="7dp"
                            android:button="@null"
                            android:textSize="20dp"
                            android:background="@drawable/gender_asset"
                            android:drawableTop="@drawable/man"
                            />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Дата рождения"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkgray"
                        android:textSize="20dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/pickDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textSize="18dp"
                        android:textStyle="normal"
                        android:textAlignment="textStart"
                        android:background="@drawable/edit_text_asset"
                        android:hint="ДД.ММ.ГГГГ"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_asset"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Сохранить"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel_asset"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Удалить"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

    </ScrollView>

</FrameLayout>