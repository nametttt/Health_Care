<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:textAlignment="textStart"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/left_arrow"
                android:background="@color/transparent"
                android:textColor="@color/gray"
                android:text="Назад"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Советы"
                    android:textSize="32dp"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_asset"
                    android:layout_marginVertical="20dp"
                    >

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:hint="Введите запрос"
                        android:id="@+id/searchEditText"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:backgroundTint="@color/lightgray"
                        />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:id="@+id/search"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/message"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:id="@+id/nutrition"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_statistic_asset"
                        android:padding="10dp"
                        android:text="Как мое питание"
                        android:textAllCaps="false"
                        android:textSize="20dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:id="@+id/sleep"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_statistic_asset"
                        android:padding="10dp"
                        android:text="Советы по сну"
                        android:textAllCaps="false"
                        android:textSize="20dp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/spinner_ring"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/advice"
                    android:background="@drawable/health_asset"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="ллял"
                        android:id="@+id/header"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="textStart"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="ллял"
                        android:id="@+id/body"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:textAlignment="textStart"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>