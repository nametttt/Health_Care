<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    style="@style/BackButton"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Назад"/>

                    <ImageView
                        android:id="@+id/statsIcon"
                        android:layout_width="0dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:gravity="end"
                        android:contentDescription="Статистика"
                        android:layout_gravity="center"
                        android:src="@drawable/idea"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Советы"
                    style="@style/HeaderText"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_asset"
                    android:layout_marginVertical="20dp"
                    >

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:hint="Введите запрос"
                        android:id="@+id/searchEditText"
                        style="@style/PasswordEditText"
                        />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:id="@+id/search"
                        style="@style/SearchButtonStyle"               android:background="@color/transparent"
                        android:src="@drawable/message"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textCategory3"
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Личные советы"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageIcon"
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="22dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="Стрелка"
                            android:src="@drawable/down" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/nutritionAdvice"
                            style="@style/AdviceButtonStyle"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Советы по питанию"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/commonHealthAdvice"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/AdviceButtonStyle"
                            android:text="Об общем состоянии" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/Linear2"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/waterAdvice"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/AdviceButtonStyle"
                            android:text="Как мой водный режим?" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/pressureAdvice"
                            style="@style/AdviceButtonStyle"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Расскажи о моем давлении"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/Linear3"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/sleepAdvice"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/AdviceButtonStyle"
                            android:text="Советы по сну" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:id="@+id/IMTAdvice"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/AdviceButtonStyle"
                            android:text="Как мой ИМТ?" />

                    </LinearLayout>


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/spinner_ring"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/advice"
                    android:background="@drawable/health_asset"
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SubHeaderText"
                        android:id="@+id/header"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SubHeaderText"
                        android:id="@+id/body"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>