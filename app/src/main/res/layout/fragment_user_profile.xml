<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:textAlignment="textStart"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/left_arrow"
            android:background="@color/transparent"
            android:textColor="@color/gray"
            android:text="Назад"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_home"
                android:layout_marginVertical="10dp"
                android:text="Мой профиль"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Фотография профиля"
                android:textAlignment="textStart"
                android:textColor="@color/darkgray"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView"
                    android:foreground="@drawable/image_asset"
                    android:src="@drawable/notphoto" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Псевдоним"
                android:textAlignment="textStart"
                android:textColor="@color/darkgray"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:padding="12dp"
                android:textSize="18dp"
                android:maxLines="1"
                android:background="@drawable/edit_text_asset"
                android:hint="Псевдоним"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Пол"
                android:textAlignment="textStart"
                android:textColor="@color/darkgray"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/userGenderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/edit_text_asset"
                android:textSize="20dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="5dp"
                android:textAlignment="textStart"
                android:entries="@array/user_genders"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Дата рождения"
                android:textAlignment="textStart"
                android:textColor="@color/darkgray"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textAlignment="textStart"
                android:background="@drawable/edit_text_asset"
                android:hint="ДД.ММ.ГГГГ"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_asset"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:text="Сохранить"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>