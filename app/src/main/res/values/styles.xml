<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"  parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/lightgreen</item>
        <item name="colorOnSurface">@color/menugreen</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="HorizontalCalendarTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>