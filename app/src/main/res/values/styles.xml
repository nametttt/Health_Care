<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"  parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/lightgreen</item>
        <item name="colorOnSurface">@color/menugreen</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="HorizontalCalendarTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="HeaderText" parent="BaseText">
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="SubHeaderText" parent="BaseText">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="LabelText" parent="BaseText">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edit_text_asset</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@drawable/edit_text_asset</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="BaseButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BackButton" parent="BaseButton">
        <item name="android:drawableLeft">@drawable/left_arrow</item>
        <item name="android:text">Назад</item>
    </style>

    <style name="AdviceButtonStyle">
        <item name="android:background">@drawable/button_statistic_asset</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="SymptomButtonStyle">
        <item name="android:background">@drawable/selected_symptom</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="SelectedSymptomButtonStyle">
        <item name="android:background">@drawable/button_statistic_asset</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/button_asset</item>
    </style>

    <style name="GenderRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gender_asset</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@null</item>
    </style>
    <style name="LinkText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="PasswordEditText" parent="EditTextStyle">
        <item name="android:hint">Пароль</item>
        <item name="android:layout_marginVertical">0dp</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="DateButton">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edit_text_asset</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="BodyText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="BulletItem" parent="BodyText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="TableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SearchButtonStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/search</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="EyeButton">
        <item name="android:src">@drawable/eye</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:contentDescription">Скрытие пароля</item>
    </style>

</resources>